# Copy this file to .env and fill in your API keys

# Required: WeatherAPI.com API Key
# Get your free API key at: https://www.weatherapi.com/signup.aspx
WEATHERAPI_KEY='ADD_HERE_YOUR_WEATHERAPI_KEY'

# Required: OpenAI API Key  
# Get your API key at: https://platform.openai.com/api-keys
OPENAI_API_KEY='ADD_HERE_YOUR_OPENAI_API_KEY'

# Optional: Application Configuration
DEBUG=false
LOG_LEVEL=INFO
HOST=0.0.0.0
PORT=8000

# Optional: OpenAI Model Configuration
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.3
OPENAI_MAX_TOKENS=1000

# Optional: API Timeouts (in seconds)
WEATHER_REQUEST_TIMEOUT=30
OPENAI_REQUEST_TIMEOUT=60

# Optional: Rate Limiting
RATE_LIMIT_REQUESTS=100

# Optional: Redis for Caching (if you want to use caching)
# REDIS_URL=redis://localhost:6379
# CACHE_WEATHER_TTL=3600

# Optional: CORS Configuration
# ALLOWED_ORIGINS=["http://localhost:3000","https://your-frontend.com"]